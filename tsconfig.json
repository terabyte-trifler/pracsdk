{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "hardhat.config.ts",
    "scripts",
    "test",
    "typechain-types",
    "contracts/**/*.sol",
    "hardhat.d.ts"
  ]
}
